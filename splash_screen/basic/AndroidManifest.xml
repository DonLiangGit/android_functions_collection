<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.analysis"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/appetize_icon_h"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.analysis.SplashScreen"
            android:label="@string/title_activity_list_view_loader" 
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.analysis.ListViewLoader"
            android:label="@string/title_activity_list_view_loader" >
        </activity>
        <activity
            android:name="com.example.analysis.SingleListItem"
            android:label="@string/title_activity_single_list_item" >
        </activity>
    </application>

</manifest>
